<?xml version="1.0"?>
<ruleset name="Customize Inline Editing Plugin">

	<rule ref="WordPress-Core" />
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="customize-inline-editing,default" />
		</properties>
	</rule>
	<rule ref="WordPress-Docs" />

	<rule ref="Squiz.Commenting.FunctionComment.ScalarTypeHintMissing">
		<severity>0</severity>
	</rule>
	<rule ref="WordPress.Files.FileName.InvalidClassFileName"><!-- TODO: Eliminate need for this in plugin. -->
		<severity>0</severity>
	</rule>
	<rule ref="Generic.Formatting.MultipleStatementAlignment.NotSameWarning">
		<severity>0</severity>
	</rule>

	<arg name="extensions" value="php"/>
	<arg value="s"/>
	<file>.</file>

	<exclude-pattern>*/dev-lib/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
